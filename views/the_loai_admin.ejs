<script>
        
        function deleteTruyen(id) {
            const url = `/the_loai/delete_the_loai/${id}`;
            const method = "DELETE";

            fetch(url, {method})
                .then((response) => {
                if (response.ok) {
                    alert(`The loai có ID ${id} đã được xóa thành công!`);
                    window.location.reload();
                } 
                else {
                    alert(`Lỗi khi xóa truyện ${id}! Có thể vẫn còn chương truyện chưa xóa hết. Hãy kiểm tra lại trước khi xóa `);
                }
                }) 
            .catch((error) => {
                console.log(error);
            });
        }

function them_the_loai() {
const ten_the_loai = document.getElementById('theloai').value;
const data = { ten_the_loai: ten_the_loai,};

fetch('/the_loai/create_the_loai', {
    method: 'POST',
    headers: {'Content-Type': 'application/json'},
    body: JSON.stringify(data) 
})
.then(response => response.json())
.then(data => {
    if (data.success) {
        alert('Truyện đã được tạo thất bại !');
    } else {
        alert('Truyện đã được tạo thành công !');
    }
});

}

function sua_the_loai() {

const ten_the_loai_moi = document.getElementById('theloai').value;
const id = document.getElementById('suatheloai').value;
const data = { ten_the_loai: ten_the_loai_moi };

fetch('/the_loai/update_the_loai/'+ id, {
    method: 'PUT',
    headers: {'Content-Type': 'application/json'},
    body: JSON.stringify(data)
})
.then(response => response.json())
.then(data => {
    if (data.success) {
        alert('Truyện cập nhật thất bại !');
    } else {
        alert('Truyện cập nhật thành công !');
    }
});
}

function edit_tag(Tagname, TagId) {
    theloai.value = Tagname;
    suatheloai.value=TagId;
}

