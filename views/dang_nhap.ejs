<body>
    <div class=" w3l-login-form" style="margin-top: 20px;">
        <h2>Login Here</h2>
            <div class=" w3l-form-group">
                <label>Username:</label>
                <div class="group">
                    <i class="fa fa-user"></i>
                    <input type="text" id="username" class="form-control" placeholder="Username" required="required" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Password:</label>
                <div class="group">
                    <i class="fa fa-unlock"></i>
                    <input type="password" id="password" class="form-control" placeholder="Password" required="required" />
                </div>
            </div>
        <div>
          <form action="/truyen/" method="get">
            <p class=" w3l-register-p"><a href="/truyen/dang_ky" class="register"> Quên mật khẩu ?</a></p>
           </form>
        </div>
            <button type="submit" onclick="login()">Login</button>
       <form action="/truyen/" method="get">
        <p class=" w3l-register-p">Don't have an account?<a href="/truyen/dang_ky" class="register"> Register</a></p>
       </form>
        
    </div>



  

    
    <script>
        function login() {
          const username = document.getElementById('username').value;
          const password = document.getElementById('password').value;
        
          if (!username || !password) {
            alert('Hãy nhập đày đủ thông tin!');
            return; 
          }
          const url = '/auth/signin';
          const data = {username,password,};
          fetch(url, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.accessToken) {
                //alert('Đăng nhập  thành công!');
                window.location.href='/truyen/open_truyen'
              } else {
                alert(' Đăng nhập thất bại!');
              }
            })
            .catch((error) => {
              console.error(error);
            });
        }
//============================================================================================




        </script>

        

