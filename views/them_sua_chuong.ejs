    <script>
   
        function createchuong() {

            const tenchuong = document.getElementById('ten_chuong').value;
            const noidung = document.getElementById('noi_dung').value;
            const selectElement = document.querySelector('#the-loai');

            const select = document.querySelector("#the_loai");
            const selectedOption = select.options[select.selectedIndex];
            const selectedValue = selectedOption.value;
          
            const data = {
                ten_chuong: tenchuong ,
                noi_dung: noidung,
                luot_xem_chuong: 3,
                id_truyen_chuong :selectedValue,
            };
            fetch('/chuong/createchuong', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(data)
            })
            
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Truyện đã được tạo thất bại !');
                } else {
                    alert('Truyện đã được tạo thành công !');
                }
            });

        }

        function updatechuong(id) {

            const tenchuong = document.getElementById('ten_chuong').value;
            const noidung = document.getElementById('noi_dung').value;

            const select = document.querySelector("#the_loai");
            const selectedOption = select.options[select.selectedIndex];
            const selectedValue = selectedOption.value;
            const data = {
                ten_chuong: tenchuong,
                noi_dung: noidung ,
                luot_xem_chuong: 3,
                id_truyen_chuong :selectedValue,
            };

            fetch('/chuong//updatechuong/'+ id, {
                method: 'PUT',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Chương cập nhật thất bại !');
                } else {
                    alert('Chương cập nhật thành công !');
                }
            });
        }
        
        
      </script>

      

